{% extends '/misc/base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block title2 %}Categories index{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}"><button type="button" class="btn btn-info btn-sm">show</button></a>
                    {% if app.user %}<a href="{{ path('category_edit', {'id': category.id}) }}"><button type="button" class="btn btn-primary btn-sm">edit</button></a>{% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ include('/misc/form.html.twig', {'notForm': true, 'create': true, 'type': 'category'}) }}

{% endblock %}
